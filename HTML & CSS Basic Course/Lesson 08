/*CSS Display property*/

input{
    display: block;
    margin-bottom:5px;
}
p{
    width: 200px;
    display: inline-block ;
    vertical-align: middle;
}
button{
   display: inline-block;
}
.photo{
    display: block;
    width: 150px;
    margin-left: 150px;
    margin-bottom:10px; 
}
.text-box{
    color: gray;
    width:400px;
    font-size: 15px;
    padding: 12px;
    border: none;
    border-radius: 30px;
    box-shadow: 0 1px 6px rgba(0,0,0,0.4);
    margin-left: 20px;
}
